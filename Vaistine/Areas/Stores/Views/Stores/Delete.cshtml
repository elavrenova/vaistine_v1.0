@model Vaistine.Areas.Stores.Models.Store

@{
    ViewData["Title"] = "Delete";
}

<h3>Удаление склада</h3>

<h3>Вы уверены, что хотите удалить @Html.DisplayFor(model => model.Descr) ?</h3>
</hr>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Название
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Descr)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Owner)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Owner.Descr)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.IsAccount)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IsAccount)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-default alert-info">Нет, назад</a> |
        <input type="submit" value="Да, удалить" class="btn btn-default alert-success" />
    </form>
</div>
