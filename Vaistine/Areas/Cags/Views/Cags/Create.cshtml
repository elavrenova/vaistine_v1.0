@model Vaistine.Areas.Cags.Models.Cag

@{
    ViewData["Title"] = "Create";
}

<h2>Создание нового контрагента</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descr" class="control-label">Название</label>
                <input asp-for="Descr" class="form-control" />
                <span asp-validation-for="Descr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParentId" class="control-label"></label>
                <select asp-for="ParentId" class="form-control" asp-items="ViewBag.ParentId">
                    <option value="">Входит в состав</option>
                </select>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-default alert-info">Назад</a>
                <input type="submit" value="Создать" class="btn btn-default alert-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
